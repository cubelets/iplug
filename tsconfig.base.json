{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "module": "ESNext",
    "target": "ESNext",
    "types": ["node", "jest"],
    "strict": true,
    "incremental": true,
    "sourceMap": false,
    "removeComments": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitThis": false,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["rollup.config.ts", "src/**/*", "src/types/**/*.d.ts"],
  "exclude": ["node_modules", "@types", "dist", "build"]
}
